@model List<Department>



<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h2>Department List</h2>

        <a href="@Url.Action("Create", "Department")" class="btn btn-primary mb-3">Add New Department</a>

        <table class="table table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>Name</th>
                    <th>ManagerName</th>
                    <th>OfficeLocation</th>
                    <th>EmployeeCount</th>
                  
                </tr>
            </thead>
            <tbody>
                @foreach (var department in Model)
                {
                    <tr>
                        <td>@department.Name</td>
                        <td>@department.ManagerName</td>
                        <td>@department.OfficeLocation</td>
                        <td>@department.EmployeeCount</td>

                        <td>
                            <a href="@Url.Action("Edit", "Department", new { id = department.DepartmentId })" class="btn btn-warning">Edit</a>
                            <a href="@Url.Action("Delete", "Department", new { id = department.DepartmentId })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
                            <a href="@Url.Action("Details", "Department", new { id = department.DepartmentId  })" class="btn btn-info">View Details</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>



</body>
</html>